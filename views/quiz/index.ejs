<%- include('../partials/header') -%>
<h1>Quizes index</h1>

<a href="/quiz/new" class="btn btn-lg btn-success">New Quiz</a>
<div class="list-group">
    <% for(var  i=0;i<qs.length;i++){%>
        <%var t = qs[i];%>
        <a href="/quiz/<%=t.name%>" class="list-group-item">
        <h3><%=t.name%></h3>
        <h4>type</h4><p><%=t.type%></p>
        </a>
        <div class="row" style="margin-right:0;">
            <div class="pull-right">
                <form id="deleteform" action = "/quiz/<%= t._id %>/?_method=DELETE" method="POST">
                <input type="hidden" name="_csrf" value="<%=csrfToken%>"/>
                <button class = "btn btn-md btn-danger"  >Delete</button>
                </form> 
            </div>
            <div class="pull-right">
                <a class = "btn btn-md btn-warning" href="/quiz/edit/<%= t._id %>" >Edit</a>
            </div>
            <div class="pull-left">
                <a class = "btn btn-md btn-primary" href="/quiz/start/<%= t.name %>" >Take Test</a>
            </div>
        </div>
    <%}%>
</div>


<%- include('../partials/footer') -%>